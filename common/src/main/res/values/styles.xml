<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="MyDialog2" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_rect_tran</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <!--页面头部-->
    <declare-styleable name="HeadView">
        <attr name="titleName" format="string" />
        <attr name="titleColor" format="reference" />
        <attr name="bgColor" format="reference" />
        <attr name="backImg" format="reference" />
        <attr name="rightImg" format="reference" />
        <attr name="isBack" format="boolean" />
        <attr name="isCondition" format="boolean" />
        <attr name="conditionText" format="string" />
        <attr name="conditionTextColor" format="reference" />
        <attr name="conditionImg" format="reference" />
        <attr name="isConditionImg" format="boolean" />
    </declare-styleable>

    <!--dialog/pop 动画-->
    <style name="anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

</resources>
